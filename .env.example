# Admin credentials for Grafana Dashboard
# Default login: admin/admin (change in production!)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
# Disables public registration of new Grafana users
GF_USERS_ALLOW_SIGN_UP=false

# PostgreSQL database credentials
# Stores user data and ML predictions
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=db

# Connection string for asyncpg (Python async PostgreSQL driver)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://admin:admin@postgres:5432/db

# Redis configuration for JWT token blacklisting
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=admin

# MinIO root credentials (S3-compatible object storage)
# Used for storing uploaded images
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=adminadmin
# Internal service URL for MinIO API
LOCAL_S3_PROXY_SERVICE_URL=http://minio:8997

# JWT secret key for token signing)
JWT_SECRET=secretjwtkey
# JWT signing algorithm
JWT_ALGORITHM=HS256

# Alloy (OpenTelemetry Collector) endpoint
# Services send logs, metrics, and traces
ALLOY_ENDPOINT=http://alloy:4317


# Loads model and classes from within the container (local mode)
# If false: Model will be loaded from MLflow server
USE_LOCAL=true

# MLflow configuration (only required when USE_LOCAL=false)
# URI to MLflow tracking server
MLFLOW_TRACKING_URI=""
# Path to the stored model in MLflow
MODEL_URI=""
# MLflow run ID of the model to use
RUN_ID=""


# Auth Service API endpoints
# Used by frontend for authentication
LOGIN_ENDPOINT=http://auth_service:8000/api/v1/auth/login
SIGNUP_ENDPOINT=http://auth_service:8000/api/v1/auth/signup 
LOGOUT_ENDPOINT=http://auth_service:8000/api/v1/auth/logout

# Inference Service API endpoint
# Used by frontend for ML predictions
PREDICT_ENDPOINT=http://inference_service:8000/api/v1/inference/predict